<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Professional Resume</title>
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css'
    />
    <style>
      :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --light-color: #ecf0f1;
        --text-color: #333;
        --light-text: #777;
        --border-color: #ddd;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background-color: #f9f9f9;
        padding: 20px;
      }

      .resume-container {
        max-width: 1000px;
        margin: 0 auto;
        background: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
      }

      .header {
        background: var(--secondary-color);
        color: white;
        padding: 30px;
        text-align: center;
      }

      .name {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 10px;
        color: white;
      }

      .title {
        font-size: 18px;
        font-weight: 300;
        margin-bottom: 20px;
        color: var(--light-color);
      }

      .contact-info {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 15px;
      }

      .contact-item {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .contact-item i {
        color: var(--primary-color);
      }

      .main-content {
        display: flex;
      }

      .left-column {
        flex: 7;
        padding: 30px;
        border-right: 1px solid var(--border-color);
      }

      .right-column {
        flex: 3;
        padding: 30px;
        background: #f5f7f9;
      }

      .section {
        margin-bottom: 25px;
      }

      .section-title {
        font-size: 20px;
        font-weight: 600;
        color: var(--primary-color);
        padding-bottom: 8px;
        margin-bottom: 15px;
        border-bottom: 2px solid var(--primary-color);
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .section-title i {
        font-size: 18px;
      }

      .experience-item,
      .education-item {
        margin-bottom: 20px;
      }

      .job-title {
        font-weight: 600;
        font-size: 18px;
        color: var(--secondary-color);
      }

      .company,
      .education-institution {
        font-weight: 500;
        color: var(--primary-color);
        margin-bottom: 5px;
      }

      .date {
        color: var(--light-text);
        font-size: 14px;
        margin-bottom: 8px;
      }

      .description {
        margin-top: 8px;
      }

      .skills {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .skill-item {
        background: var(--primary-color);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 14px;
      }

      .about {
        line-height: 1.8;
        margin-bottom: 25px;
      }

      @media (max-width: 768px) {
        .main-content {
          flex-direction: column;
        }

        .left-column {
          border-right: none;
          border-bottom: 1px solid var(--border-color);
        }
      }
    </style>
  </head>
  <body>
    <div class='resume-container'>
      <div class='header'>
        <h1 class='name'>{{fullName}}</h1>
        <div class='title'>Professional Title</div>
        <div class='contact-info'>
          <div class='contact-item'>
            <i class='fas fa-envelope'></i>
            <span>{{email}}</span>
          </div>
          <div class='contact-item'>
            <i class='fas fa-phone'></i>
            <span>{{phone}}</span>
          </div>
          {{!-- <div class='contact-item'>
            <i class='fas fa-map-marker-alt'></i>
            {{!-- <span>Location</span> --}}
          </div> --}}
        </div>
      </div>

      <div class='main-content'>
        <div class='left-column'>
          <div class='section'>
            <h2 class='section-title'><i class='fas fa-briefcase'></i>
              Experience</h2>
            <div class='experience'>
              {{{experience}}}
            </div>
          </div>

          <div class='section'>
            <h2 class='section-title'><i class='fas fa-graduation-cap'></i>
              Education</h2>
            <div class='education'>
              {{education}}
            </div>
          </div>
        </div>

        <div class='right-column'>

          <div class='section'>
            <h2 class='section-title'><i class='fas fa-star'></i> Skills</h2>
            <div class='skills'>
              {{skills}}
            </div>
          </div>

        </div>
      </div>
    </div>
  </body>
</html>